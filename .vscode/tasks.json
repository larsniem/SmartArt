{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Pack Example SmartArt",
            "type": "shell",
            "command": "python",
            "args": [
                "${workspaceFolder}/.tasks/pack.py",
                "${file}",
                "--output", "~/Documents/Benutzerdefinierte Office-Vorlagen/SmartArt Graphics/",
                "-v",
            ]
        },
        {
            "label": "Start Powerpoint",
            "type": "shell",
            "command": "/Program Files/Microsoft Office/root/Office16/POWERPNT.EXE",
            "args": [
                "/B"
            ]
        }
    ]
}